<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_mrp_bom">
        <div class="o_mrp_bom_report_page container py-3 py-lg-5 px-0 bg-white">
            <div t-if="data.get('lines')">
                <div class="px-3 mb-5">
                    <h1>BoM Overview</h1>
                    <h3 t-esc="data['name']"/>
                    <hr t-if="data['bom_code']"/>
                    <h6 t-if="data['bom_code']">Reference: <t t-esc="data['bom_code']"/></h6>
                </div>
                <t t-set="currency" t-value="data['currency']"/>
                <table class="o_mrp_bom_expandable table">
                    <thead>
                        <tr>
                            <th name="th_mrp_bom_h">Product</th>
                            <th class="text-end">Quantity</th>
                            <th class="text-end" groups="uom.group_uom">UoM</th>
                            <th t-if="data['show_availabilities']" class="text-end">Free to Use / On Hand</th>
                            <th t-if="data['show_availabilities']" class="text-center">Availability</th>
                            <th t-if="data['show_lead_times']" class="text-end">Lead Time</th>
                            <th>Route</th>
                            <th t-if="data['show_costs']" class="text-end">BoM Cost</th>
                            <th t-if="data['show_costs']" class="text-end">Product Cost</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td name="td_mrp_bom"><span t-esc="data['name']"/></td>
                            <td class="text-end"><span t-esc="data['quantity']" t-options='{"widget": "float", "decimal_precision": "Product Unit of Measure"}'/></td>
                            <td class="text-end" groups="uom.group_uom"><span t-esc="data['uom']"/></td>
                            <td t-if="data['show_availabilities']" class="text-end">
                                <span>
                                    <t t-esc="data['quantity_available']" t-options='{"widget": "float", "decimal_precision": "Product Unit of Measure"}'/> /
                                    <t t-esc="data['quantity_on_hand']" t-options='{"widget": "float", "decimal_precision": "Product Unit of Measure"}'/>
                                </span>
                            </td>
                            <td t-if="data['show_availabilities']" class="text-center">
                                <span>
                                    <t t-if="data.get('availability_state')">
                                        <span t-attf-class="{{'text-success' if data['availability_state'] == 'available' else ''}}{{'text-warning' if data['availability_state'] == 'expected' else ''}}{{'text-danger' if data['availability_state'] == 'unavailable' else ''}}" t-esc="data['availability_display']"/>
                                    </t>
                                </span>
                            </td>
                            <td t-if="data['show_lead_times']" class="text-end">
                                <span t-if="data['lead_time'] is not False">
                                    <t t-if="int(data['lead_time']) != data['lead_time']" t-esc="data['lead_time']"/>
                                    <t t-else="" t-esc="data['lead_time']" t-options="{'widget': 'float', 'precision': 0}"/>
                                    Days
                                </span>
                            </td>
                            <td>
                                <div>
                                    <span t-if="data['route_name']"><t t-esc="data['route_name']"/>: </span>
                                    <span t-esc="data['route_detail']"/>
                                </div>
                            </td>
                            <td t-if="data['show_costs']" class="text-end">
                                <span t-esc="data['bom_cost']" t-options='{"widget": "monetary", "display_currency": currency}'/>
                            </td>
                            <td t-if="data['show_costs']" class="text-end">
                                <span t-esc="data['prod_cost']" t-options='{"widget": "monetary", "display_currency": currency}'/>
                            </td>
                        </tr>
                        <t t-call="mrp.report_mrp_bom_pdf_line"/>
                    </tbody>
                    <tfoot t-if="data['show_costs']">
                        <tr>
                            <td name="td_mrp_bom_f" class="text-end">
                                <span><t t-if="data['byproducts']" t-esc="data['name']"/></span>
                            </td>
                            <td class="text-end"><span><strong>Unit Cost</strong></span></td>
                            <td class="text-end" groups="uom.group_uom"><span t-esc="data['uom']"/></td>
                            <td t-if="data['show_availabilities']"/>
                            <td t-if="data['show_availabilities']"/>
                            <td t-if="data['show_lead_times']"/>
                            <td/>
                            <td class="text-end">
                                <span t-esc="data['cost_share'] * data['bom_cost'] / data['quantity']" t-options='{"widget": "monetary", "display_currency": currency}'/>
                            </td>
                            <td class="text-end">
                                <span t-esc="data['prod_cost']/data['quantity']" t-options='{"widget": "monetary", "display_currency": currency}'/>
                            </td>
                        </tr>
                        <t t-if="data['byproducts']" t-foreach="data['byproducts']" t-as="byproduct">
                            <tr>
                                <td name="td_mrp_bom_byproducts_f" class="text-end">
                                    <span><t t-esc="byproduct['name']"/></span>
                                </td>
                                <td class="text-end"><span><strong>Unit Cost</strong></span></td>
                                <td class="text-end" groups="uom.group_uom"><span t-esc="byproduct['uom']"/></td>
                                <td t-if="data['show_availabilities']"/>
                                <td t-if="data['show_availabilities']"/>
                                <td t-if="data['show_lead_times']"/>
                                <td/>
                                <td class="text-end">
                                    <span t-esc="byproduct['cost_share'] * data['bom_cost'] / byproduct['quantity']" t-options='{"widget": "monetary", "display_currency": currency}'/>
                                </td>
                                <td class="text-end">
                                    <span t-esc="byproduct['prod_cost'] / byproduct['quantity']" t-options='{"widget": "monetary", "display_currency": currency}'/>
                                </td>
                            </tr>
                        </t>
                    </tfoot>
                </table>
            </div>
            <div t-else="" class="d-flex align-items-center justify-content-center h-50">
                <h4 class="text-muted">No data available.</h4>
            </div>
        </div>
    </template>

    <template id="report_mrp_bom_pdf_line">
        <t t-set="currency" t-value="data['currency']"/>
        <t t-foreach="data['lines']" t-as="l">
            <tr t-if="l['visible'] and (l['type'] != 'operation' or data['show_operations'])">
                <td name="td_mrp_code">
                    <span t-attf-style="margin-left: {{ str(l['level'] * 20) }}px"/>
                    <span t-esc="l['name']"/>
                </td>
                
                <td class="text-end">
                    <span>
                        <t t-if="l['type'] == 'operation'" t-esc="l['quantity']" t-options='{"widget": "float_time"}'/>
                        <t t-if="l['type'] in ['bom', 'byproduct']" t-esc="l['quantity']" t-options='{"widget": "float", "decimal_precision": "Product Unit of Measure"}'/>
                    </span>
                </td>
                <td class="text-end" groups="uom.group_uom"><span t-esc="l['uom']"/></td>
                <td t-if="data['show_availabilities']" class="text-end">
                    <t t-if="l.get('quantity_available', False) is not False">
                        <span>
                            <t t-esc="l['quantity_available']" t-options='{"widget": "float", "decimal_precision": "Product Unit of Measure"}'/> /
                            <t t-esc="l['quantity_on_hand']" t-options='{"widget": "float", "decimal_precision": "Product Unit of Measure"}'/>
                        </span>
                    </t>
                </td>
                <td t-if="data['show_availabilities']" class="text-center">
                    <t t-if="l.get('availability_state')">
                        <span t-attf-class="{{'text-success' if l['availability_state'] == 'available' else ''}}{{'text-warning' if l['availability_state'] == 'expected' else ''}}{{'text-danger' if l['availability_state'] == 'unavailable' else ''}}" t-esc="l['availability_display']"/>
                    </t>
                </td>
                <td t-if="data['show_lead_times']" class="text-end">
                    <span t-if="l.get('lead_time', False) is not False">
                        <t t-if="int(l['lead_time']) != l['lead_time']" t-esc="l['lead_time']"/>
                        <t t-else="" t-esc="l['lead_time']" t-options="{'widget': 'float', 'precision': 0}"/>
                        Days
                    </span>
                </td>
                <td>
                    <div>
                        <span t-if="l.get('route_name')"><t t-esc="l['route_name']"/>: <t t-esc="l['route_detail']"/></span>
                    </div>
                </td>
                <td t-if="data['show_costs']" class="text-end">
                    <span t-esc="l['bom_cost']" t-options='{"widget": "monetary", "display_currency": currency}'/>
                </td>
                <td t-if="data['show_costs']" class="text-end">
                    <span t-if="'prod_cost' in l" t-esc="l['prod_cost']" t-options='{"widget": "monetary", "display_currency": currency}'/>
                </td>
            </tr>
        </t>
    </template>

    <template id="report_bom_structure">
        <t t-set="data_report_landscape" t-value="True"/>
        <t t-call="web.basic_layout">
            <t t-foreach="docs" t-as="data">
                <div class="page">
                    <t t-call="mrp.report_mrp_bom"/>
                </div>
                <p style="page-break-before:always;"> </p>
            </t>
        </t>
    </template>
</odoo>
