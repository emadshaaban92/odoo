<odoo>
    <data>
        <record id="view_company_form_inherit" model="ir.ui.view">
            <field name="name">view_company_form_inherit</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="ETA Configuration" attrs="{'invisible': [('country_code', '!=', 'EG')]}">
                        <group>
                            <group string="ETA credentials">
                                <field name="l10n_eg_client_identifier"/>
                                <field name="l10n_eg_client_secret_1" password="True"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>