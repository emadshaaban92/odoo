<odoo>
    <data>
        <record id="action_sign_invoices" model="ir.actions.server">
            <field name="name">Sign invoices</field>
            <field name="type">ir.actions.server</field>
            <field name="state">code</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="code">
                action = records.action_post_sign_invoice()
            </field>
        </record>


        <record id="view_move_form_inherit" model="ir.ui.view">
            <field name="name">view_move_form_inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="priority" eval="40"/>
            <field name="arch" type="xml">
                <xpath expr="//header/button[@name='action_post']" position="after">
                    <button name="action_post_sign_invoice" type="object"
                            class="oe_highlight"
                            groups="account.group_account_invoice"
                            string="Sign Invoice"
                            attrs="{'invisible': ['|', '|', ('country_code', '!=', 'EG'), ('l10n_eg_invoice_signed', '=', True), ('state', '=', 'draft')]}"/>
                </xpath>
                <xpath expr="//label[@for='partner_id']/.." position="before">
                    <field name="l10n_eg_branch_id"/>
                </xpath>
                <xpath expr="//field[@name='invoice_date']" position="after">
                    <field name="l10n_eg_posted_datetime" readonly="1" attrs="{'invisible': [('country_code', '!=', 'EG')]}"/>
                </xpath>
                <notebook position="inside">
                    <page string="ETA E-Invoice" attrs="{'invisible': [('country_code', '!=', 'EG')]}">
                        <group>
                            <group>
                                <field name="l10n_eg_uuid" readonly="1" force_save="1"/>
                                <field name="l10n_eg_submission_id" readonly="1" force_save="1"/>
                            </group>
                            <group>
                                <field name="l10n_eg_invoice_signed" readonly="1" force_save="1"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <label for="l10n_eg_pdf"/>
                                <div class="o_row">
                                    <field name="l10n_eg_pdf" filename="eta_document_name" readonly="1" force_save="1"/>
                                    <button name="action_get_eta_invoice_pdf" type="object"
                                            groups="account.group_account_invoice"
                                            icon="fa-clone"
                                            string="Get ETA Invoice PDF"
                                            attrs="{'invisible': [('edi_state','!=', 'sent')]}"/>
                                </div>
                            </group>
                        </group>
                    </page>
                </notebook>
            </field>
        </record>

        <record id="view_invoice_update_uuid" model="ir.ui.view">
            <field name="name">view_invoice_tree_inh</field>
            <field name="model">account.move</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="l10n_eg_uuid"/>
                                <field name="l10n_eg_submission_id"/>
                            </group>
                            <group>
                                <field name="l10n_eg_invoice_signed"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button string="Save" class="btn-primary" special="save"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>