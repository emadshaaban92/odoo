<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Project Stages -->
    <record id="project_project_stage_0" model="project.project.stage">
        <field name="sequence">10</field>
        <field name="name">To Do</field>
    </record>

    <record id="project_project_stage_1" model="project.project.stage">
        <field name="sequence">15</field>
        <field name="name">In Progress</field>
    </record>

    <record id="project_project_stage_2" model="project.project.stage">
        <field name="sequence">20</field>
        <field name="name">Done</field>
        <field name="fold" eval="True"/>
    </record>

    <record id="project_project_stage_3" model="project.project.stage">
        <field name="sequence">25</field>
        <field name="name">Canceled</field>
        <field name="fold" eval="True"/>
    </record>

    <record id="project_task_state_0" model="project.task.state">
        <field name="sequence">10</field>
        <field name="name">In Progress</field>
        <field name="approval_mode">False</field>
    </record>

    <record id="project_task_state_1" model="project.task.state">
        <field name="sequence">11</field>
        <field name="name">Done</field>
        <field name="approval_mode">False</field>
    </record>

    <record id="project_task_state_2" model="project.task.state">
        <field name="sequence">11</field>
        <field name="name">Waiting</field>
        <field name="approval_mode">False</field>
        <field name="user_trigger_possible">False</field>
    </record>

    <record id="project_task_state_apr_0" model="project.task.state">
        <field name="sequence">11</field>
        <field name="name">Pending approval</field>
        <field name="approval_mode">True</field>
    </record>

    <record id="project_task_state_apr_1" model="project.task.state">
        <field name="sequence">12</field>
        <field name="name">Approved</field>
        <field name="approval_mode">True</field>
    </record>

    <record id="project_task_state_apr_2" model="project.task.state">
        <field name="sequence">14</field>
        <field name="name">Rejected</field>
        <field name="approval_mode">True</field>
    </record>
    
    <record id="project_task_state_apr_3" model="project.task.state">
        <field name="sequence">13</field>
        <field name="name">Changes requested</field>
        <field name="approval_mode">True</field>
    </record>
</odoo>
