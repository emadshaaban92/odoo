<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="project_update_report_table">
        <table class="table table-sm o_main_table mt-4">
            <thead style="display: table-row-group">
                <tr>
                    <th>Date</th>
                    <th>Author</th>
                    <th>Progress</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="align-middle">
                        <span t-field="doc.date"/>
                    </td>
                    <td class="align-middle">
                        <span t-field="doc.user_id"/>
                    </td>
                    <td  class="align-middle">
                        <span t-field="doc.progress"/>
                    </td>
                    <td class="align-middle">
                        <span t-field="doc.status"/>
                    </td>
                </tr>
            </tbody>
        </table>
        <span>
            <t t-out="doc.description"/>
        </span>
    </template>

    <template id="project_update_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="oe_structure"/>
                        <div class="row mt8">
                            <div class="col-12">
                                <h2><span>
                                    Project Update<t t-if="doc.name">:<t t-out="doc.name"/></t>
                                </span></h2>
                            </div>
                        </div>
                        <t t-call="project.project_update_report_table"/>
                    </div>
                </t>
            </t>
        </t>
    </template>

</odoo>
