<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="invoice_form_inherit_l10n_in_edi_ewaybill" model="ir.ui.view">
        <field name="name">account.move.form.inherit.l10n.in.ewaybill</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@name='other_info']" position="before">
                <page string="eWayBill" name="l10n_in_edi_ewaybill_page" attrs="{'invisible':[('move_type', '=', 'entry')]}">
                    <group name="ewaybill_group">
                        <group string="Transportation Details" name="transportation_group">
                            <field name="l10n_in_mode"/>
                            <field name="l10n_in_distance"/>
                            <field name="l10n_in_vehicle_type" attrs="{'invisible': [('l10n_in_mode','!=','1')]}"/>
                            <field name="l10n_in_vehicle_no" attrs="{'invisible': [('l10n_in_mode','!=','1')]}"/>
                            <field name="l10n_in_transporter_id" attrs="{'invisible': [('l10n_in_mode','!=','0')]}"/>
                            <field name="l10n_in_transportation_doc_no" attrs="{'invisible': [('l10n_in_mode','not in',('2','3','4'))]}"/>
                            <field name="l10n_in_transportation_doc_date" attrs="{'invisible': [('l10n_in_mode','not in',('2','3','4'))]}"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
 </odoo>
