<odoo>
    <data>
        <record id="l10n_ke_edi_copycat_view_move_form_inherit" model="ir.ui.view">
            <field name="name">view_move_form_inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="priority" eval="40"/>
            <field name="arch" type="xml">
                <xpath expr="//header/button[@name='action_post']" position="after">
                    <field name="l10n_ke_qrcode" invisible="1"/>
                    <button name="l10n_ke_action_post_send_invoices" type="object"
                            class="oe_highlight"
                            groups="account.group_account_manager"
                            string="Send Invoice To Device"
                            attrs="{'invisible': ['|', '|', ('country_code', '!=', 'KE'), ('l10n_ke_qrcode', '!=', False), ('state', '!=', 'posted')]}"/>
                </xpath>
                <notebook position="inside">
                    <page string="Copycat E-Invoice" attrs="{'invisible': [('country_code', '!=', 'KE')]}">
                        <group>
                            <group>
                                <field name="l10n_ke_qrcode"/>
                                <field name="l10n_ke_json"/>
                            </group>
                        </group>
                    </page>
                </notebook>
            </field>
        </record>
    </data>
</odoo>
