<templates>
    <t t-name="sale_product_configurator.dialog" owl="1">
        <Dialog size="size" title="title">
            <t t-call="sale_product_configurator.product_selected">
                <t t-set="product" t-value="this.data.product"/>
                <t t-set="product_price" t-value="this.data.product_price"/>
            </t>
            <t t-set-slot="footer" owl="1">
                <!-- the o_sale_product_configurator_edit class is used for tours. -->
                <button class="btn btn-primary o_sale_product_configurator_edit"
                        t-on-click="_onConfirm">
                    Confirm
                </button>
                <button class="btn btn-secondary" t-on-click="_onClose">
                    Back
                </button>
            </t>
        </Dialog>
    </t>
</templates>
