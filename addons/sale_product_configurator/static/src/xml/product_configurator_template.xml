<templates>
     <!-- modal: full table, currenclty selected products at top -->
    <t t-name='sale_product_configurator.product_selected' owl='1'>
        <table class='table table-striped table-sm'>
            <thead>
                <tr>
                    <th style='o_product_configurator_img'><span class='label'>Product</span></th>
                    <th><span class='label'></span></th>
                    <th class='text-center td-qty'><span class='label'>Quantity</span></th>
                    <th class='text-center td-price'><span class='label'>Price</span></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class='o_product_configurator_img'>
                        <img class='product_detail_img'
                             t-att-src="'/web/image/product.product/'+product.id+'/image_128'"
                             alt='Product Image'/>
                    </td>
                    <td class='td-product_name'>
                        <strong class='product-name product_display_name'
                                t-esc='product.display_name'/>
                        <div class='text-muted small'>
                            <div t-esc='product.description_sale'/>
                        </div>
                    </td>
                    <td class='text-center td-qty'>
                        <div class="css_quantity input-group">
                            <button t-attf-href="#" class="btn btn-primary float_left js_add_cart_json d-none d-md-inline-block" aria-label="Remove one" title="Remove one">
                                <i class="fa fa-minus"></i>
                            </button>
                            <input type="text"
                                class="js_quantity form-control quantity text-center"
                                style="max-width: 4rem"
                                data-min="1"
                                name="add_qty"
                                t-att-value="1"/>
                            <button t-attf-href="#" class="btn btn-primary float_left js_add_cart_json d-none d-md-inline-block" aria-label="Add one" title="Add one">
                                <i class="fa fa-plus"></i>
                            </button>
                        </div>
                    </td>
                    <td class="text-center td-price" name="price">
                        <span class="oe_price product_id"
                              style="white-space: nowrap;"
                              t-out="product_price"/>
                    </td>
                </tr>
                <tr class="o_total_row">
                    <td colspan="4" class="text-end">
                        <strong>Total:</strong>
                        <span class="js_price_total fw-bold" style="white-space: nowrap;" t-out="product_price"/>
                    </td>
                </tr>
            </tbody>
        </table>
    </template>
</templates>
