<templates>
    <!-- modal: full table, currenclty selected products at top -->
    <t t-name='sale_product_configurator.product_selected' owl='1'>
        <table class='table table-striped table-sm'>
            <thead>
                <tr>
                    <th class='o_product_configurator_img'><span class='label'>Product</span></th>
                    <th><span class='label'></span></th>
                    <th class='text-center o_product_configurator_qty'><span class='label'>Quantity</span></th>
                    <th class='text-center o_product_configurator_price'><span class='label'>Price</span></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class='o_product_configurator_img'>
                        <img t-att-src="'/web/image/product.product/'+product.id+'/image_128'"
                             alt='Product Image'/>
                    </td>
                    <td class='o_product_configurator_product_name'>
                        <strong t-esc='product.display_name'/>
                        <div class='text-muted small'>
                            <div t-esc='product.description_sale'/>
                        </div>
                    </td>
                    <td class='text-center o_product_configurator_qty'>
                        <div class="input-group">
                            <button class="btn btn-primary d-none d-md-inline-block"
                                    t-attf-href="#"
                                    title="Remove one"
                                    aria-label="Remove one">
                                <i class="fa fa-minus"></i>
                            </button>
                            <input name="product_quantity"
                                   style="max-width: 4rem"
                                   type="text"
                                   min="1"
                                   t-att-value="1"/>
                            <button class="btn btn-primary d-none d-md-inline-block"
                                    t-attf-href="#"
                                    title="Add one"
                                    aria-label="Add one">
                                <i class="fa fa-plus"></i>
                            </button>
                        </div>
                    </td>
                    <td class="text-center o_product_configurator_price" name="price">
                        <span style="white-space: nowrap;" t-out="product_price"/>
                    </td>
                </tr>
                <tr class="o_total_row">
                    <td colspan="4" class="text-end">
                        <strong>Total: </strong>
                        <span class="fw-bold" style="white-space: nowrap;" t-out="product_price"/>
                    </td>
                </tr>
            </tbody>
        </table>
    </template>
</templates>
