<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="account_analytic_plan_form_view_inherit_expense" model="ir.ui.view">
            <field name="name">account.analytic.plan.inherit.form</field>
            <field name="model">account.analytic.plan</field>
            <field name="inherit_id" ref="account.account_analytic_plan_form_view_inherit_account"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='applicability_ids']//field[@name='account_prefix']" position="attributes">
                        <attribute name="attrs">
                            {'invisible': [('business_domain','not in', ['invoice', 'bill', 'general', 'expense'])]}
                        </attribute>
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</odoo>
