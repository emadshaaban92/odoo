<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="snailmail.SnailmailNotificationPopoverContent" owl="1">
        <t t-if="message">
            <div class="o_SnailmailNotificationPopoverContent m-1" t-attf-class="{{ className }}" t-ref="root">
                <t t-if="notification">
                    <i class="o_SnailmailNotificationPopoverContent_icon" t-att-class="iconClass" role="img"/>
                    <span t-esc="iconTitle"/>
                </t>
            </div>
        </t>
    </t>

</templates>
