<?xml version="1.0" encoding="UTF-8"?>

<templates>
    <t t-name="account.DocumentsHiddenUploadForm">
        <div class="d-none o_account_document_upload">
            <t t-call="HiddenInputFile">
                <t t-set="multi_upload" t-value="true"/>
                <t t-set="fileupload_id" t-value="widget.fileUploadID"/>
                <t t-set="fileupload_action" t-translation="off">/web/binary/upload_attachment</t>
                <input type="hidden" name="model" value=""/>
                <input type="hidden" name="id" value="0"/>
            </t>
        </div>
    </t>

    <t t-extend="ListView.buttons" t-name="DocumentsListView.buttons">
        <t t-jquery="button.o_list_button_add" t-operation="after">
            <button type="button" class="btn btn-secondary o_button_upload_document">
                Upload
            </button>
        </t>
    </t>

    <t t-extend="KanbanView.buttons" t-name="DocumentsKanbanView.buttons">
        <t t-jquery="button" t-operation="after">
            <button type="button" class="btn btn-secondary o_button_upload_document">
                Upload
            </button>
        </t>
    </t>

    <t t-name="account.DocumentDropZone">
        <div class="o_drop_area">
            <i class="fa fa-upload fa-10x"></i>
        </div>
    </t>

    <t t-name="account.ListView.Buttons" t-inherit="web.ListView.Buttons" t-inherit-mode="primary" owl="1">
        <xpath expr="//*[@class='btn btn-primary o_list_button_add']" position="after">
            <FileUploader
                acceptedFileExtensions="props.acceptedFileExtensions"
                multiUpload="true"
                onUploaded.bind="onFileUploaded"
                onUploadComplete.bind="onUploadComplete"
            >
                <t t-set-slot="toggler">
                    <button type="button" class="btn btn-secondary o_button_upload_bill">
                        Upload
                    </button>
                </t>
            </FileUploader>
        </xpath>
    </t>

    <t t-name="account.KanbanView.Buttons" t-inherit="web.KanbanView.Buttons" t-inherit-mode="primary" owl="1">
        <xpath expr="//*[@class='btn btn-primary o-kanban-button-new']" position="after">
            <FileUploader
                acceptedFileExtensions="props.acceptedFileExtensions"
                multiUpload="true"
                onUploaded.bind="onFileUploaded"
                onUploadComplete.bind="onUploadComplete"
            >
                <t t-set-slot="toggler">
                    <button type="button" class="btn btn-secondary o_button_upload_bill">
                        Upload
                    </button>
                </t>
            </FileUploader>
        </xpath>
    </t>
</templates>
