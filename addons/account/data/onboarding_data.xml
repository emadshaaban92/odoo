<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- ONBOARDING STEPS -->
        <!-- INVOICING -->
        <record id="account_common_onboarding_company_step" model="onboarding.onboarding.step">
            <field name="title">Company Data</field>
            <field name="description">Set your company's data for documents header/footer.</field>
            <field name="button_text">Let's start!</field>
            <field name="done_text">Looks great! - Click to review</field>
            <field name="panel_step_open_action_name">action_open_account_common_onboarding_company</field>
            <field name="sequence">1</field>
        </record>

        <record id="account_invoice_onboarding_bank_account_step" model="onboarding.onboarding.step">
            <field name="title">Bank Account</field>
            <field name="description">Connect your financial accounts in seconds.</field>
            <field name="button_text">Add a bank account</field>
            <field name="done_text">Step Completed!</field>
            <field name="panel_step_open_action_name">action_setting_init_bank_account</field>
            <field name="sequence">2</field>
        </record>

        <record id="account_common_onboarding_layout_step" model="onboarding.onboarding.step">
            <field name="title">Documents Layout</field>
            <field name="description">Customize the look of your documents.</field>
            <field name="button_text">Customize</field>
            <field name="done_text">Looks great! - Click to review</field>
            <field name="panel_step_open_action_name">action_open_account_common_onboarding_layout</field>
            <field name="sequence">3</field>
        </record>

        <record id="account_invoice_onboarding_create_invoice_step" model="onboarding.onboarding.step">
            <field name="title">Create Invoice</field>
            <field name="description">Create your first invoice.</field>
            <field name="button_text">Create</field>
            <field name="done_text">First invoice sent! - Click to review</field>
            <field name="panel_step_open_action_name">action_open_account_onboarding_create_invoice</field>
            <field name="sequence">4</field>
        </record>

        <!-- DASHBOARD -->
        <record id="account_dashboard_onboarding_fiscal_year_step" model="onboarding.onboarding.step">
            <field name="title">Accounting Periods</field>
            <field name="description">Define your fiscal years &amp; tax returns periodicity.</field>
            <field name="button_text">Configure</field>
            <field name="done_text">Step completed! - Click to review</field>
            <field name="panel_step_open_action_name">action_open_account_dashboard_onboarding_fiscal_year</field>
            <field name="sequence">1</field>
        </record>

        <!-- Step 2 reused from invoicing onboarding -->

        <record id="account_dashboard_onboarding_taxes_step" model="onboarding.onboarding.step">
            <field name="title">Taxes</field>
            <field name="description">Set default Taxes for sales and purchase transactions.</field>
            <field name="button_text">Review</field>
            <field name="done_text">Taxes set - Click to review</field>
            <field name="panel_step_open_action_name">action_open_account_dashboard_onboarding_taxes</field>
            <field name="sequence">3</field>
        </record>

        <record id="account_dashboard_onboarding_chart_of_accounts_step" model="onboarding.onboarding.step">
            <field name="title">Chart of Accounts</field>
            <field name="description">Set up your chart of accounts and record initial balances.</field>
            <field name="button_text">Review</field>
            <field name="done_text">Chart of accounts set. Click to review</field>
            <field name="panel_step_open_action_name">action_open_account_dashboard_onboarding_chart_of_accounts</field>
            <field name="sequence">4</field>
        </record>

        <!-- WITHOUT PANEL -->
        <record id="account_dashboard_setup_bill_step" model="onboarding.onboarding.step">
            <field name="title">Import Vendor Bills</field>
            <field name="sequence">1000</field>
        </record>

        <record id="account_onboarding_sale_tax_step" model="onboarding.onboarding.step">
            <field name="title">Taxes</field>
            <field name="description">Choose a default sales tax for your products.</field>
            <field name="button_text">Set taxes</field>
            <field name="done_text">Step Completed! Click to review</field>
            <field name="panel_step_open_action_name">action_open_account_onboarding_sale_tax</field>
            <field name="sequence">100</field> <!-- after "Online Payment" -->
        </record>

        <!-- ONBOARDING PANELS -->
        <record id="account_invoice_onboarding" model="onboarding.onboarding">
            <field name="name">Invoicing Onboarding</field>
            <field name="step_ids" eval="[
                Command.link(ref('account.account_common_onboarding_company_step')),
                Command.link(ref('account.account_invoice_onboarding_bank_account_step')),
                Command.link(ref('account.account_common_onboarding_layout_step')),
                Command.link(ref('account.account_invoice_onboarding_create_invoice_step'))
            ]"/>
            <field name="route_name">account_invoice</field>
            <field name="panel_background_color">blue</field>
            <field name="panel_close_action_name">action_close_account_invoice_onboarding</field>
            <field name="panel_background_image" type="base64" file="account/static/src/img/account_invoice_onboarding_bg.jpg"/>
        </record>

        <record id="account_dashboard_onboarding" model="onboarding.onboarding">
            <field name="name">Account Dashboard Onboarding</field>
            <field name="step_ids" eval="[
                Command.link(ref('account.account_dashboard_onboarding_fiscal_year_step')),
                Command.link(ref('account.account_invoice_onboarding_bank_account_step')),
                Command.link(ref('account.account_dashboard_onboarding_taxes_step')),
                Command.link(ref('account.account_dashboard_onboarding_chart_of_accounts_step'))
            ]"/>
            <field name="route_name">account_dashboard</field>
            <field name="panel_background_color">orange</field>
            <field name="panel_close_action_name">action_close_account_dashboard_onboarding</field>
            <field name="panel_background_image" type="base64" file="account/static/src/img/account_dashboard_onboarding_bg.jpg"/>
        </record>
    </data>
</odoo>
