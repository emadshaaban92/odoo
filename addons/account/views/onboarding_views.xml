<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_common_onboarding_company_form" model="ir.ui.view">
        <field name="name">base.company.form.inherit.company.onboarding</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form" />
        <field name="mode">primary</field>
        <field name="priority">1000</field>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='social_media']" position="replace" />
            <form position="attributes">
                <attribute name="js_class">account_common_onboarding_company_form</attribute>
            </form>
        </field>
    </record>

    <record id="account_onboarding_sale_tax_form" model="ir.ui.view">
        <field name="name">account.onboarding.sale.tax.form</field>
        <field name="model">res.company</field>
        <field name="mode">primary</field>
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <form>
                <div class="mb16">Choose a default sales tax for your products.</div>
                <label for="account_sale_tax_id" string="Sales Tax"/>
                <field name="account_sale_tax_id" />
                <footer>
                    <button string="Apply" class="btn btn-primary" type="object" name="action_save_onboarding_sale_tax" data-hotkey="q" />
                    <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_open_account_common_onboarding_company" model="ir.actions.act_window">
        <field name="name">Set your company data</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.company</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="account_common_onboarding_company_form" />
        <field name="target">new</field>
    </record>
</odoo>
