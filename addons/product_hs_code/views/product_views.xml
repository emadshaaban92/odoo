<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hs_code_inherit_product_template_form_view" model="ir.ui.view">

        <field name="name">hs.code.inherit.product.template.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='general_information']//group[@name='group_standard_price']" position="inside">
                <field name="product_hs_code" widget="hscode"/>
            </xpath>
        </field>
    </record>

</odoo>
