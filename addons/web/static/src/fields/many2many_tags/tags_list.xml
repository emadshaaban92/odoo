<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="web.TagsList" owl="1">
        <span t-attf-class="o_tags_list {{props.className}} d-inline-flex flex-wrap" t-att-name="props.name">
            <t t-if="props.tags" t-foreach="visibleTags" t-as="tag" t-key="tag.id or tag_index">
                <span t-attf-class="{{`o_tag_color_${ tag.colorIndex or 0 }`}} o_tag badge badge-pill d-inline-flex align-items-center h-100" t-att-data-color="tag.colorIndex" t-att-title="tag.text" t-on-click="(ev) => tag.onClick and tag.onClick(ev)">
                    <img t-if="tag.img" t-att-src="tag.img" class="o_m2m_avatar rounded-circle"/>
                    <div class="o_tag_badge_text mx-2" t-esc="tag.text" />
                    <a t-if="tag.onDelete" t-on-click.stop="(ev) => tag.onDelete and tag.onDelete(ev)" href="#" class="fa fa-times o_delete" title="Delete" aria-label="Delete"></a>
                </span>
            </t>
            <span t-if="props.tags and otherTags" class="o_m2m_avatar_empty rounded-circle text-center font-weight-bold" t-att-data-tooltip="tooltip">
                <span t-if="otherTags.length > 9" t-esc="'9+'" />
                <span t-else="" t-esc="'+' + otherTags.length" />
            </span>
            <t t-slot="default" />
        </span>
    </t>

</templates>
