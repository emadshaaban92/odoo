<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

<t t-name="web.Form.OuterGroup" owl="1">
    <div class="o_group row g-2 gx-lg-5 align-items-start" t-attf-class="{{ allClasses }} {{ props.hasOuterTemplate and props.class ? '' : 'my-3' }}" t-att-style="props.style">
        <t t-slot="title" t-if="props.slots.title" />
        <t t-foreach="getItems()" t-as="item" t-key="item_index">
            <span class="o_newline" t-if="item.newline" />
            <t t-slot="{{ item.name }}" className="item.colspan !== props.maxCols ? 'col-lg-' + item.size : ''"/>
        </t>
    </div>
</t>

<t t-name="web.Form.InnerGroup" owl="1">
    <div t-attf-class="{{ allClasses }} {{ props.class and props.class.indexOf('oe_subtotal_footer') >=0 ? 'd-grid gap-0' : 'd-sm-grid' }}" class="o_inner_group" t-if="props.slots" t-att-style="props.style">
        <div t-if="props.slots.title" t-attf-style="grid-column: span {{ props.maxCols }}">
              <t t-slot="title" />
        </div>
        <div t-foreach="getRows()" t-as="row" t-key="row_index" class="o_wrap_field mb-3 mb-sm-0" t-attf-class="{{ props.class and props.class.indexOf('oe_subtotal_footer') >=0 ? 'd-contents' : 'd-flex d-sm-contents flex-column' }}" t-if="row.isVisible">
            <t t-foreach="row" t-as="cell" t-key="cell_index">

                <t t-if="cell.subType === 'item_component'">
                    <div class="o_cell o_wrap_label w-100" t-attf-class="{{ props.class and props.class.indexOf('oe_subtotal_footer') >=0 ? '' : 'flex-grow-1 flex-sm-grow-0' }}">
                        <t t-component="cell.Component" t-if="cell.isVisible" t-props="cell.props"/>
                    </div>
                    <div class="o_cell o_wrap_input" t-attf-class="{{ props.class and props.class.indexOf('oe_subtotal_footer') >=0 ? '' : 'flex-grow-1 flex-sm-grow-0' }}" t-attf-style="{{ cell.itemSpan -1 > 1 ? 'grid-column: span ' + (cell.itemSpan -1) + ';' : '' }}{{ cell.width ? 'width: ' + cell.width + '%' + ';' : '' }}">
                        <t t-slot="{{ cell.name }}" />
                    </div>
                </t>

                <t t-else="">
                    <div class="o_cell flex-grow-1 flex-sm-grow-0" t-attf-style="{{ cell.itemSpan > 1 ? 'grid-column: span ' + cell.itemSpan + ';' : '' }}{{ props.class and props.class.indexOf('oe_subtotal_footer') &lt; 0 and cell.width ? 'width: ' + cell.width + '%' + ';' : '' }}"
                    t-attf-class="{{ cell.subType === 'label' ? 'o_wrap_label w-100' : null }}" t-if="cell.isVisible">
                        <t t-slot="{{ cell.name }}" />
                    </div>
                </t>

            </t>
        </div>
    </div>
</t>

</templates>
