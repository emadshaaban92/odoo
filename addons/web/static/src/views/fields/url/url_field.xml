<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="web.UrlField" owl="1">
        <div class="d-flex align-items-center">
            <t t-if="this.canDisplayAsLink and !state.isEditing">
                <a class="o_field_widget o_form_uri me-3" t-on-click.stop="" t-att-href="formattedHref" t-esc="props.text || props.value || ''" target="_blank"/>
                <i t-if="!props.readonly" class="fa fa-pencil" t-on-click="toggleEdition" />
            </t>
            <t t-else="">
                <input
                    class="o_input"
                    t-att-id="props.id"
                    type="text"
                    t-att-placeholder="props.placeholder"
                    t-att-required="props.required"
                    t-ref="input"
                />
                <i t-if="this.canDisplayAsLink and !props.readonly" class="fa fa-eye" t-on-click="(ev) => this.toggleEdition(ev, true)" />
            </t>
        </div>
    </t>

</templates>
