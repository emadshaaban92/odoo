<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="web.PropertySelection" owl="1">
        <div class="d-flex flex-column">
            <div class="w-100">
                <input
                    t-if="!props.readonly"
                    class="o_input"
                    type="text"
                    placeholder="Type a new option..."
                    t-on-keypress="onNewOption"/>
                <div
                    t-foreach="this.props.value || []" t-as="option" t-key="option[0]"
                    class="w-100 card d-flex flex-row align-items-center justify-content-between my-2 px-3 rounded">
                    <span t-out="option[1]"/>
                    <button
                        t-if="!props.readonly"
                        class="btn btn-link p-0 m-0"
                        title="Remove Property"
                        t-on-click="() => this.onDeleteOption(option_index)">
                        <i class="fa fa-trash"/>
                    </button>
                </div>
            </div>
        </div>
    </t>
</templates>
