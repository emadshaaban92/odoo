<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="web.ViewScaleButton" owl="1">
        <t t-set="scales" t-value="Object.keys(props.scales)" />
        <span t-if="scales.length > 1" class="o_view_scale_button">
            <Dropdown class="'btn-group'" togglerClass="'btn btn-secondary scale_button_selection text-uppercase'" hotkey="'v'" showCaret="true">
                <t t-set-slot="toggler">
                    <t t-esc="props.scales[props.currentScale].description" />
                </t>
                <t t-foreach="Object.entries(props.scales)" t-as="scale" t-key="scale[0]">
                    <DropdownItem
                        class="`o_scale_button_${scale[0]} btn btn-secondary text-uppercase ${scale[0] === props.currentScale ? 'active' : ''}`"
                        hotkey="scale[1].hotkey or scale[0][0]"
                        onSelected="() => this.props.setScale(scale[0])"
                    >
                        <t t-esc="scale[1].description" />
                    </DropdownItem>
                </t>
            </Dropdown>
        </span>
    </t>

</templates>
