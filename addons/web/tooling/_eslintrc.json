{
  "extends": ["eslint:recommended", "plugin:prettier/recommended", "./odoo/addons/test_lint/tests/eslintrc.json"],
  "rules": {
    "prettier/prettier": ["error", {
      "tabWidth": 4,
      "semi": true,
      "singleQuote": false,
      "printWidth": 100,
      "endOfLine": "auto"
    }],
    "curly": ["error", "all"],
    "prefer-const": ["error", {
      "destructuring": "all",
      "ignoreReadBeforeAssign": true
    }]
  }  
}
