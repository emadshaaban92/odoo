<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pos_category_clothes" model="pos.category">
        <field name="name">Clothes</field>
    </record>

    <record id="pos_category_miscellaneous" model="pos.category">
        <field name="name">Miscellaneous</field>
    </record>

    <record id="t_shirt" model="product.product">
        <field name="available_in_pos">True</field>
        <field name="list_price">20</field>
        <field name="name">T-Shirt</field>
        <field name="default_code">CLOTH_0009</field>
        <field name="type">product</field>
        <field name="weight">0.01</field>
        <field name="to_weight">False</field>
        <field name="barcode">2100002000003</field>
        <field name="taxes_id" eval='[(5,)]'/>
        <field name="categ_id" ref="product.product_category_1"/>
        <field name="pos_categ_id" ref="pos_category_clothes"/>
        <field name="uom_id" ref="uom.product_uom_unit" />
        <field name="uom_po_id" ref="uom.product_uom_unit" />
        <field name="image_1920" type="base64" file="point_of_sale/static/img/tshirt.png"/>
    </record>
    <record id="tshirt_color_attribute" model="product.attribute">
            <field name="name">Color</field>
            <field name="sequence">30</field>
            <field name="display_type">radio</field>
            <field name="create_variant">no_variant</field>
    </record>
    <record id="tshirt_color_attribute_white" model="product.attribute.value">
        <field name="name">White</field>
        <field name="sequence">1</field>
        <field name="attribute_id" ref="tshirt_color_attribute"/>
    </record>
    <record id="tshirt_color_attribute_black" model="product.attribute.value">
        <field name="name">Black</field>
        <field name="sequence">2</field>
        <field name="attribute_id" ref="tshirt_color_attribute"/>
    </record>
    <record id="tshirt_color_attribute_navy" model="product.attribute.value">
        <field name="name">Navy</field>
        <field name="sequence">3</field>
        <field name="attribute_id" ref="tshirt_color_attribute"/>
    </record>
    <record id="t_shirt_color" model="product.template.attribute.line">
        <field name="product_tmpl_id" ref="point_of_sale.t_shirt"/>
        <field name="attribute_id" ref="tshirt_color_attribute"/>
        <field name="value_ids" eval="[(6, 0, [ref('tshirt_color_attribute_white'), ref('tshirt_color_attribute_black'), ref('tshirt_color_attribute_navy')])]"/>
    </record>

    <record id="jeans" model="product.product">
        <field name="available_in_pos">True</field>
        <field name="list_price">80</field>
        <field name="name">Jeans</field>
        <field name="default_code">CLOTH_0008</field>
        <field name="type">product</field>
        <field name="weight">0.01</field>
        <field name="taxes_id" eval='[(5,)]'/>
        <field name="categ_id" ref="product.product_category_1"/>
        <field name="pos_categ_id" ref="pos_category_clothes"/>
        <field name="to_weight">False</field>
        <field name="uom_id" ref="uom.product_uom_unit" />
        <field name="uom_po_id" ref="uom.product_uom_unit" />
        <field name="image_1920" type="base64" file="point_of_sale/static/img/jeans.png"/>
    </record>

    <record id="sweater" model="product.product">
        <field name="available_in_pos">True</field>
        <field name="list_price">50</field>
        <field name="name">Sweater</field>
        <field name="default_code">CLOTH_0006</field>
        <field name="type">product</field>
        <field name="weight">0.01</field>
        <field name="taxes_id" eval='[(5,)]'/>
        <field name="to_weight">False</field>
        <field name="categ_id" ref="product.product_category_1"/>
        <field name="pos_categ_id" ref="pos_category_clothes"/>
        <field name="uom_id" ref="uom.product_uom_unit" />
        <field name="uom_po_id" ref="uom.product_uom_unit" />
        <field name="image_1920" type="base64" file="point_of_sale/static/img/sweater.png"/>
    </record>

    <record id="hoodie" model="product.product">
        <field name="available_in_pos">True</field>
        <field name="list_price">60</field>
        <field name="name">Hoodie</field>
        <field name="default_code">CLOTH_0001</field>
        <field name="to_weight">False</field>
        <field name="barcode">230000100008</field>
        <field name="type">product</field>
        <field name="weight">0.01</field>
        <field name="taxes_id" eval='[(5,)]'/>
        <field name="categ_id" ref="product.product_category_1"/>
        <field name="pos_categ_id" ref="pos_category_clothes"/>
        <field name="uom_id" ref="uom.product_uom_unit" />
        <field name="uom_po_id" ref="uom.product_uom_unit" />
        <field name="image_1920" type="base64" file="point_of_sale/static/img/hoodie.png"/>
    </record>

    <function model="ir.model.data" name="_update_xmlids">
        <value model="base" eval="[{
            'xml_id': 'point_of_sale.hoodie_product_template',
            'record': obj().env.ref('point_of_sale.hoodie').product_tmpl_id,
            'noupdate': True,
        }]"/>
    </function>

    <record id="hoodie_color_attribute" model="product.attribute">
            <field name="name">Color</field>
            <field name="sequence">30</field>
            <field name="display_type">radio</field>
            <field name="create_variant">no_variant</field>
    </record>
    <record id="hoodie_color_attribute_white" model="product.attribute.value">
        <field name="name">White</field>
        <field name="sequence">1</field>
        <field name="attribute_id" ref="hoodie_color_attribute"/>
    </record>
    <record id="hoodie_color_attribute_black" model="product.attribute.value">
        <field name="name">Black</field>
        <field name="sequence">2</field>
        <field name="attribute_id" ref="hoodie_color_attribute"/>
    </record>
    <record id="hoodie_color" model="product.template.attribute.line">
        <field name="product_tmpl_id" ref="point_of_sale.hoodie_product_template"/>
        <field name="attribute_id" ref="hoodie_color_attribute"/>
        <field name="value_ids" eval="[(6, 0, [ref('hoodie_color_attribute_white'), ref('hoodie_color_attribute_black')])]"/>
    </record>

    <record id="cap" model="product.product">
        <field name="available_in_pos">True</field>
        <field name="list_price">25</field>
        <field name="name">Cap</field>
        <field name="weight">0.01</field>
        <field name="taxes_id" eval='[(5,)]'/>
        <field name="default_code">CLOTH_0002</field>
        <field name="to_weight">False</field>
        <field name="categ_id" ref="product.product_category_1"/>
        <field name="pos_categ_id" ref="pos_category_clothes"/>
        <field name="uom_id" ref="uom.product_uom_unit" />
        <field name="uom_po_id" ref="uom.product_uom_unit" />
        <field name="image_1920" type="base64" file="point_of_sale/static/img/cap.png"/>
    </record>
</odoo>
