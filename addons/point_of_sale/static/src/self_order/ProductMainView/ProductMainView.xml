<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="ProductMainView" owl="1">
        <NavBar restaurantName="props.restaurantName" tableNumber="props.tableNumber" viewMenu="props.viewMenu"/>
            <div class="text-center m-4">
                <img t-att-src="props.product.image" class="img-fluid" alt="Product image"/>
            </div>
            <!-- Name and Price -->
            <div class="d-flex w-100 justify-content-around">
                <!-- Product Name -->
                <h3><t t-esc="props.product.name"/></h3>
                <!-- Price -->
                <h3 class="ml-auto text-secondary"><t t-esc="props.product.price + 'â‚¬'"/></h3>
            </div>
            <!-- Product Description -->
            <div class="p-3">
                <t t-esc="props.product.description"/>    
            </div>
            <!-- quantity select and add to cart button -->
            <div>
                  <div class="col-lg-2">
                        <div class="input-group">
                            <span class="input-group-btn">
                                <button type="button" class="quantity-left-minus btn btn-danger btn-number"  data-type="minus" data-field="">
                                    <span class="glyphicon glyphicon-minus"></span>
                                </button>
                            </span>
                            <input type="text" id="quantity" name="quantity" class="form-control input-number" value="10" min="1" max="100">
                            <span class="input-group-btn">
                                <button type="button" class="quantity-right-plus btn btn-success btn-number" data-type="plus" data-field="">
                                    <span class="glyphicon glyphicon-plus"></span>
                                </button>
                            </span>
                        </div>
                    </div>
                <button class="fixed-bottom btn btn-primary btn-lg btn-block w-100">Add to Cart</button>
            </div>
    </t>
</templates>