<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="CartView" owl="1">
        <!-- this padding-bottom is important in order for Pay button not to -->
        <!-- appear over the last item -->
        <div class="pb-5">
            <!-- NavBar is an Owl component -->
            <NavBar restaurantName="props.restaurantName" tableNumber="props.tableNumber" viewMenu="props.viewMenu"/>
            <!-- Looping through all the cart items  -->
            <t t-foreach="props.cartItems" t-as="cartItem" t-key="cartItem">
                <!-- create a reference to the product -->
                <t t-set="product" t-value="props.productList[cartItem.id]"/>
                <div 
                    class="mt-2 bg-white d-flex align-items-center shadow-sm  m-1">
                    <img class="w-25 img-fluid" t-att-src="product.image"  alt="Product image"/>
                    <div class="mt-4 mx-4 w-100 me-5">
                        <p class="fw-bold"><t t-esc="product.name"/></p>
                        <div class="d-flex justify-content-between w-100">
                            <t t-esc="cartItem.quantity + ' x ' + product.price+ '€'" />
                            <p class="fst-italic text-right"><t t-esc="cartItem.quantity *  product.price+ '€'" /></p>
                        </div>
                        <!-- <p class="fst-italic">Price / Unit<t t-esc="product.price + '€'" /></p> 
                        <p class="fst-italic text-right">Total Price:<t t-esc="cartItem.quantity *  product.price+ '€'" /></p> -->
                    </div>
                </div>
            </t>
            <!-- Pay Button -->
            <button t-on-click="() => props.cartView()"
                    class="fixed-bottom text-white btn btn-primary btn-lg btn-block w-100">
                    <div class="d-flex align-items-center justify-content-between mx-2 ">
                    <p>
                        Order (<t t-esc="props.getTotalCartQuantity()"/>)
                    </p>
                    <p class="ml-auto">
                        <t t-esc="props.getTotalCartCost() + props.currencyType"/>
                    </p>
                    </div>
            </button>
        </div>
    </t>
</templates>

