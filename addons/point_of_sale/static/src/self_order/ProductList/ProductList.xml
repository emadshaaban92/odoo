<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="ProductList" owl="1">
        <NavBar restaurantName="props.restaurantName" tableNumber="props.tableNumber"/>
        <t t-foreach="props.productList" t-as="product" t-key="product">
            <div t-on-click="() => props.viewProduct(product.id)" 
                 class="mt-2 bg-white d-flex w-100 align-items-center shadow-sm  m-1">
                <img class="w-25 img-fluid" t-att-src="product.image"  alt="Product image"/>
                <div class="mt-4 mx-4">
                    <p class="fw-bold"><t t-esc="product.name"/></p>
                    <p class="break-line"><t t-esc="product.description" /></p>
                    <p class="fst-italic"><t t-esc="product.price + 'â‚¬'" /></p>
                </div>
            </div>
        </t>
    </t>
</templates>

