<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="ProductList" owl="1">
        <NavBar restaurantName="props.restaurantName" tableNumber="props.tableNumber"/>
        <t t-foreach="props.productList" t-as="product" t-key="product">
            <div class="mt-2 bg-white d-flex w-100 align-items-center shadow-sm  m-1" style="height:25vw;">
                <img class="w-25 img-fluid" t-att-src="product.image"  alt="Card image cap"/>
                <div class="mt-4 me-4">
                    <p class="fw-bold"><t t-esc="product.name"/></p>
                    <p class="break-line"><t t-esc="product.description" /></p>
                    <!-- <p class="font-italic"><t t-esc="product.price + '€'" /></p> -->
                    <p class="fst-italic"><t t-esc="product.price + '€'" /></p>
                </div>
            </div>
        </t>
    </t>
</templates>

