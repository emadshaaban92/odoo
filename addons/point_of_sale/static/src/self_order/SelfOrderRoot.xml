<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="SelfOrderRoot" owl="1">
            <!-- Landing Page at the start -->
            <!-- This is the first page the users sees when they go on the website -->
            <t t-if="state.currentScreen == 0">
                <LandingPageStart tableNumber="tableNumber" viewMenu="viewMenu"/>
            </t>
            <!-- Menu -->
            <!-- We go here after clicking VIEW MENU -->
            <t t-elif="state.currentScreen == 1">
                <!-- <ProductList restaurantName="restaurantName" tableNumber="tableNumber" productList="productList"/> -->
                <ProductList
                restaurantName="restaurantName" 
                tableNumber="tableNumber" 
                productList="productList" 
                viewProduct="viewProduct"
                getTotalCartQuantity="getTotalCartQuantity"
                getTotalCartCost="getTotalCartCost"
                currencyType="currencyType"
                />
            </t>
            <!-- Product Main View -->
            <!-- We go here when clicking on a product from the menu -->
            <t t-elif="state.currentScreen == 2">
                <ProductMainView 
                    restaurantName="restaurantName" 
                    tableNumber="tableNumber"
                    product="productList[this.state.currentProduct]" 
                    viewMenu="viewMenu" 
                    addToCart="addToCart"/>
            </t>
            <!-- Landing Page at the end -->
            <!-- We go here after having ordered -->
            <t t-elif="state.currentScreen == 3">
                <CartView/>
            </t>
            <t t-elif="state.currentScreen == 4">
                <LandingPageEnd tableNumber="tableNumber" message="message"/>
            </t>
    </t>
</templates>

