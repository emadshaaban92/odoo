<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="SelfOrderRoot" owl="1">
            <t t-if="state.currentScreen == 0">
                <!-- <LandingPageStart tableNumber="tableNumber" currentScreen="state.selfOrderCurrentScreen"/> -->
                <!-- <LandingPageStart tableNumber="tableNumber" state="this.state"/> -->
                <LandingPageStart tableNumber="tableNumber" viewMenu="viewMenu"/>
            </t>
            <t t-elif="state.currentScreen == 1">
                <!-- <ProductList restaurantName="restaurantName" tableNumber="tableNumber" productList="productList"/> -->
                <ProductList restaurantName="restaurantName" tableNumber="tableNumber" productList="productList" viewProduct="viewProduct"/>
            </t>
            <t t-elif="state.currentScreen == 2">
                <ProductMainView restaurantName="restaurantName" tableNumber="tableNumber" product="productList[this.state.currentProduct]" viewMenu="viewMenu"/>
            </t>
            <t t-elif="state.currentScreen == 3">
                <LandingPageEnd tableNumber="tableNumber" message="message"/>
            </t>
    </t>
</templates>

