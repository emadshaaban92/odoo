<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_employee_slides_wizard_list" model="ir.ui.view">
        <field name="model">hr.employee.slides.line.wizard</field>
        <field name="arch" type="xml">
            <tree editable="top">
                <field name="slide_id"/>
                <field name="is_registered"/>
                <field name="is_completed"/>
                <field name="completion"/>
            </tree>
        </field>
    </record>

    <record id="hr_employee_slides_wizard_gantt" model="ir.ui.view">
        <field name="model">hr.employee.slides.line.wizard</field>
        <field name="arch" type="xml">
            <gantt date_start="date_start" date_stop="date_stop" scales="week,month" string="Courses" default_group_by="slide_id"
            precision="{'day': 'hour:quarter', 'week': 'day:half', 'month': 'day:half'}">
                <field name="slide_id"/>
                <field name="date_start"/>
                <field name="date_stop"/>

                <templates>
                    <div t-name="gantt-popover" class="container-fluid">
                        <div><t t-esc="userTimezoneStartDate.format('l LT ')"/><i class="fa fa-long-arrow-right" title="Arrow"/><t t-esc="userTimezoneStopDate.format(' l LT')"/></div>
                    </div>
                </templates>
            </gantt>
        </field>
    </record>
</odoo>
