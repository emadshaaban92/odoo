<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <!-- Article index block -->
    <t t-name="knowledge.wysiwyg_index">
        <ul class="index">
            <t t-foreach="articles" t-as="article">
                <li t-if="article.name">
                    <a t-attf-href="/article/#{article.id}" t-esc="article.name"/>
                </li>
                <li t-if="article.toc &amp;&amp; article.toc.length > 0">
                    <t t-call="knowledge.wysiwyg_toc">
                        <t t-set="id" t-value="article.id"/>
                        <t t-set="titles" t-value="article.toc"/>
                    </t>
                </li>
            </t>
        </ul>
    </t>
    <t t-name="knowledge.wysiwyg_toc">
        <ol>
            <t t-foreach="titles" t-as="title">
                <li t-if="title.name">
                    <a t-attf-href="/article/#{id}" t-esc="title.name"/>
                </li>
                <li t-if="title.children &amp;&amp; title.children.length > 0">
                    <t t-call="knowledge.wysiwyg_toc">
                        <t t-set="titles" t-value="title.children"/>
                    </t>
                </li>
            </t>
        </ol>
    </t>
    <!-- File block -->
    <t t-name="knowledge.file_block">
        <div class="d-flex bg-light border p-1 my-3" contenteditable="false">
            <img t-att-src="src" class="o_image mr-3" t-att-data-mimetype="img.mimetype"/>
            <div>
                <div t-esc="img.name"/>
                <div t-esc="img.mimetype"/>
                <div>
                    <a href="#"><i class="fa fa-fw fa-envelope"/></a>
                    <a href="#"><i class="fa fa-fw fa-paperclip"/></a>
                    <a href="#"><i class="fa fa-fw fa-download"/></a>
                </div>
            </div>
        </div>
    </t>
    <t t-name="knowledge.wysiwyg_article_link">
        <a t-att-href="href" class="btn btn-sm btn-outline-secondary o_no_link_popover">
            <span t-esc="icon" class="pr-2"/><t t-esc="text"/>
        </a>
    </t>
    <t t-name="knowledge.wysiwyg_article_link_modal">
        <form class="container">
            <div class="form-group m-0">
                <input class="form-control" type="hidden" placeholder="Choose an Article"/>
            </div>
        </form>
    </t>
</templates>
