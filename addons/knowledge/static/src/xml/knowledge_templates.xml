<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="knowledge.knowledge_move_article_to_modal">
        <form class="container">
            <div class="mb-3">
                Move "<span t-esc="display_name" class="font-weight-bold"/>" under:
            </div>
            <div class="form-group m-0">
                <input class="form-control" type="hidden" placeholder="Search an Article to use as Parent"/>
            </div>
        </form>
    </t>
    <div t-name="knowledge.knowledge_search_result" class="knowledge_select2_search_result">
        <img t-if="id === 'private'" t-att-src="src" class="rounded-circle mr-1"/>
        <i t-elif="icon" t-attf-class="fa fa-w #{ icon } mr-1"/>
        <span class="label" t-esc="text"/>
    </div>
    <div t-name="knowledge.knowledge_article_not_found">
        <div class="jumbotron jumbotron-fluid">
            <div class="container">
                <h1 class="display-4">Error :(</h1>
                <p class="lead">
                    The article doesn't exist or you aren't allowed to access the article.
                </p>
                <button class="btn btn-primary">
                    <i class="fa fa-arrow-left"/> Go back to the editor
                </button>
            </div>
        </div>
    </div>
</templates>
