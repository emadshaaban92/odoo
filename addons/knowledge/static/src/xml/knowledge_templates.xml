<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="knowledge.knowledge_move_article_to_modal">
        <form class="container">
            <div class="mb-3">
                Move "<span t-esc="widget.article_name" class="font-weight-bold"/>" under:
            </div>
            <div class="form-group m-0">
                <input class="form-control" type="hidden" placeholder="Search an Article to use as Parent"/>
            </div>
        </form>
    </t>
    <t t-name="knowledge.knowledge_member_list">
        <t t-foreach="elements" t-as="el" t-key="el_index">
            <div class="o_knowledge_member d-flex align-items-center border-0 px-3 mb-1 w-100"
                t-att-data-index="el_index"
                t-att-data-id="el.id">
                <div class="flex-shrink-0">
                    <img t-attf-src="/web/image/#{avatarModel}/#{el.partner_id}/#{avatarField}"
                        t-att-data-id="el.id"
                        class="rounded-circle o_m2m_avatar"/>
                </div>
                <div class="flex-grow-1 px-3">
                    <span class="o_tag_badge_text" t-esc="el.display_name"/>
                </div>
                <div class="flex-shrink-0">
                    <div class="input-group">
                        <select class="custom-select" id="inputGroupSelect04" aria-label="Example select with button addon">
                            <option t-if="el.permission === 'read'" value="read" selected="selected">Read</option>
                            <option t-else="" value="read">Read</option>
                            <option t-if="el.permission === 'write'" value="write" selected="selected">Read &amp; Write</option>
                            <option t-else="" value="write">Read &amp; Write</option>
                        </select>
                        <div class="input-group-append">
                            <button class="o_delete btn btn-outline-danger" type="button">
                                <i class="fa fa-w fa-trash"/>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </t>
    <t t-name="knowledge.knowledge_article_template_frontend">
        <li t-att-data-article-id="article.id">
            <div class="d-flex">
                <button class="o_article_icon btn btn-link text-secondary p-0" type="button">
                    <i t-attf-class="fa fa-fw #{article.icon}" />
                </button>
                <div class="o_article_name flex-grow-1 text-truncate">
                    <a t-out="article.name" t-attf-href="/article/{{article.id}}" />
                </div>
            </div>
        </li>
    </t>
</templates>
