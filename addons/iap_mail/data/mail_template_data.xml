<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="mail_template_iap_no_credits" model="mail.template">
            <field name="name">IAP: No More Credit Notification</field>
            <field name="email_from">iap@odoo.com</field>
            <field name="email_to"></field>
            <field name="subject">${object.get_name_for_customer()} Notification</field>
            <field name="model_id" ref="iap.model_iap_account"/>
            <field name="body_html" type="html">
<div style="margin: 0px; padding: 0px;">
    <p>Dear,</p>
    <p>There are no more credits on your ${object.get_name_for_customer()} account.<br/>
    You can charge your ${object.get_name_for_customer()} account in the settings of the ${object.get_app_for_customer()} app.<br/></p>
    <p>Best regards,</p>
    <p>Odoo S.A.</p>
</div></field>
        </record>
    </data>
</odoo>
