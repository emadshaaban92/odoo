<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_company_form_inherits_l10n_es_edi_facturae" model="ir.ui.view">
        <field name="name">res.company.form.inherits.l10n_es_edi_facturae</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="model">res.company</field>
        <field name="arch" type="xml">
            <field name="vat" position="after">
                <field name="l10n_es_edi_facturae_cif_nif_nie" string="Spanish CIF/NIF/NIE"
                       attrs="{'invisible': [('country_id', '!=',  %(base.es)d)]}"/>
            </field>
            <field name="currency_id" position="after">
                <field name="l10n_es_edi_facturae_certificate_id" string="Facturae signature certificate"
                       attrs="{'invisible': [('country_id', '!=', %(base.es)d)]}"/>
            </field>
        </field>
    </record>
</odoo>
