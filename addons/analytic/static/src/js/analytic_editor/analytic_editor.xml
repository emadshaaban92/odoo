<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="analytic_editor" owl="1">
        <div class="analytic_editor" t-ref="analyticEditor" t-on-keydown="onKeydown">
            <t t-if="!props.readonly">
                <div tabindex="0" type="text" class="o_input" t-ref="mainInput" t-on-focus="onMainInputFocus" t-on-keydown="onMainInputKeydown"/>
                <div class="analytic_o2m_editor_popup dropdown-menu show rounded py-0" t-if="state.showDropdown" t-ref="editorDropdown">
                    <div class="popover-header">
                        <div class="d-flex">
                            <div class="h5 mt-2 mr-auto"><t t-esc="dropdownHeader"/></div>
                            <div class="popupButtons">
                                <!-- <span t-if="template_field_value" class="btn btn-outline-primary o_button" t-on-click="onOpenExisting"><i class="fa fa-external-link o_external_button"/></span> -->
                                <!-- <span t-if="tags.length" class="btn btn-outline-primary o_button" t-on-click="onSaveNew"><i class="fa fa-save"/></span> -->
                                <span class="btn o_button" t-on-click="() => this.forceCloseAnalyticEditor()"><span class="fa fa-close"/></span>
                                <!-- <button t-if="tags.length" class="btn" t-on-click="onClear"><span class="fa fa-trash"/></button> -->
                            </div>
                        </div>
                    </div>
                    <div class="px-2">
                        <t t-foreach="plans" t-as="plan" t-key="plan.id">
                            <table class="o_list_table table table-sm table-hover o_analytic_table mb-1">
                                <tr class="border-bottom">
                                    <th>
                                        <t t-esc="plan.name"/>
                                    </th>
                                    <th></th>
                                    <th></th>
                                </tr>
                                <t t-foreach="listByGroup(plan)" t-as="dist_tag" t-key="dist_tag.id">
                                    <tr>
                                        <td>
                                        </td>
                                        <td>
                                            <input t-on-click.stop="" type="text"/>
                                        </td>
                                        <td>
                                            <span class="fa fa-trash-o" t-on-click="() => this.deleteTag(dist_tag.id)"/>
                                        </td>
                                    </tr>
                                </t>
                                <tr>
                                    <td class="o_field_x2many_list_row_add" colspan="3">
                                        <a href="#" role="button" tabindex="-1" t-on-click.prevent="() => this.addLineToGroup(plan)">Add a line</a>
                                    </td>
                                </tr>
                            </table>
                        </t>
                    </div>
                </div>
            </t>
        </div>
    </t>

</templates>
