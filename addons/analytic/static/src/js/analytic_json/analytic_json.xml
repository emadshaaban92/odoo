<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="analytic_json" owl="1">
        <div class="analytic_json" t-ref="analyticJson" t-on-keydown="onWidgetKeydown">
            <!-- <span t-esc="this.props.value"/> -->
            <TagsList tags="tags"/>
            <t t-if="!props.readonly">
                <div tabindex="0" t-ref="mainElement" t-on-focus="onMainElementFocus"/>
                <div class="analytic_json_popup dropdown-menu show rounded py-0" t-if="state.showDropdown" t-ref="analyticDropdown">
                    <div class="popover-header">
                        <div class="d-flex">
                            <div class="h5 mt-2 me-auto"><t t-esc="listReady.length"/> of <t t-esc="listFlat.length"/> records</div>
                            <div class="popupButtons">
                                <span t-if="tags.length and allowSave" class="btn btn-outline-primary o_button" t-on-click="onSaveNew"><i class="fa fa-save"/></span>
                                <span class="btn o_button" t-on-click="() => this.forceCloseEditor()"><span class="fa fa-close"/></span>
                            </div>
                        </div>
                    </div>
                    <div class="p-2">
                        <t t-foreach="Object.values(list)" t-as="plan" t-key="plan.id">
                            <!-- <t t-set="plan" t-value="list[plan_id]"/> -->
                            <table class="o_list_table table table-sm table-hover o_analytic_table mb-1" t-attf-id="plan_{{plan.id}}">
                                <tr class="border-bottom">
                                    <th class="o_analytic_account_name">
                                        <t t-esc="plan.name"/>
                                    </th>
                                    <th class="o_analytic_percentage">
                                        <span t-attf-class="o_status d-inline-block o_analytic_status_{{groupStatus(plan.id)}}" t-att-title="applicabilityStatus(plan.id)"/>
                                    </th>
                                    <th></th>
                                </tr>
                                <t t-foreach="plan.distribution" t-as="dist_tag" t-key="dist_tag.id">
                                    <tr t-att-class="tagIsReady(dist_tag) and 'ready' or 'incomplete'">
                                        <td class="o_analytic_account_name">
                                            <AutoComplete
                                                id="dist_tag.id.toString()"
                                                placeholder="'Search Analytic Account'"
                                                value="dist_tag.analytic_account_name"
                                                sources="sourcesAnalyticAccount"
                                                autoSelect="true"
                                                onSelect.bind="(option, params) => this.onSelect(option, params, dist_tag)"
                                                onFocus.bind="() => this.groupAutocompleteFocus(plan.id)"/>
                                        </td>
                                        <td class="o_analytic_percentage">
                                            <input
                                                class="o_input"
                                                inputmode="numeric"
                                                type="text"
                                                t-att-value="dist_tag.percentage"
                                                t-on-click.stop=""
                                                t-on-change="(ev) => this.percentageChanged(dist_tag, ev)"/>
                                        </td>
                                        <td>
                                            <span class="fa fa-trash-o" t-on-click="() => this.deleteTag(dist_tag.id)"/>
                                        </td>
                                    </tr>
                                </t>
                                <tr>
                                    <td class="o_field_x2many_list_row_add" colspan="3">
                                        <a href="#" role="button" tabindex="-1" t-on-click.prevent="() => this.addLineToGroup(plan.id)">Add a line</a>
                                    </td>
                                </tr>
                            </table>
                        </t>
                        <div tabindex="0"/>
                    </div>
                </div>
            </t>
        </div>
    </t>

</templates>