<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="analytic_o2m" owl="1">
        <div class="analytic_o2m" t-ref="analyticO2m">
            <div class="popupButtons" t-if="state.isOpened">
                <button t-if="template_field_value" class="btn" t-on-click="onOpenExisting"><span class="fa fa-external-link o_external_button"/></button>
                <button class="btn o_button" t-on-click="onSaveNew"><span class="fa fa-save"/></button>
                <button class="btn" t-on-click="onClear"><span class="fa fa-trash"/></button>
                <!-- <button class="btn" t-on-click="onRandom"><span class="fa fa-random"/></button> -->
                <button class="btn" t-on-click="() => this.forceDropdownClose()"><span class="fa fa-close"/></button>
            </div>
            <TagsList tags="tags" t-if="!state.isOpened"/>
            <t t-if="!props.readonly">
                <AutoComplete
                    value="state.autocompleteValue"
                    sources="sources"
                    onSelect.bind="onSelect"
                    onInput.bind="onInput"
                    onChange="onChange"
                    onFocus.bind.stop="computeIsOpened"/>
                <div class="analytic_o2m_editor_popup dropdown-menu show" t-if="state.isOpened" t-ref="analyticPop">
