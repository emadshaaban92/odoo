<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="invoice_form_inherit_l10n_in_ewaybill" model="ir.ui.view">
        <field name="name">account.move.form.inherit.l10n.in.ewaybill</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <field name="l10n_in_edi_stock_has_picking" invisible="1"/>
                <button type="object" name="action_l10n_in_edi_stock_view_picking" class="oe_stat_button" icon="fa-truck" attrs="{'invisible': [('l10n_in_edi_stock_has_picking', '=', 'False')]}">
                    <span attrs="{'invisible': [('move_type', '!=', 'out_invoice')]}">
                        Delivery
                    </span>
                    <span attrs="{'invisible': [('move_type', '!=', 'in_invoice')]}">
                        Receipt
                    </span>
                </button>
            </xpath>
        </field>
    </record>
</odoo>
