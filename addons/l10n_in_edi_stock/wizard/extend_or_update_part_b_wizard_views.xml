<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_extend_or_update_part_b" model="ir.ui.view">
        <field name="name">Extend/Update Part-B</field>
        <field name="model">l10n.in.edi.stock.extend.update.partb</field>
        <field name="arch" type="xml">
            <form>
                <field name="request_type" invisible="1"/>
                <group attrs="{'invisible': [('request_type', '!=', 'update_transporter')]}">
                    <group>
                        <field name="transporter_id" attrs="{'required': [('request_type', '=', 'update_transporter')]}" domain="[('vat', '!=', False), ('country_id.code', '=', 'IN')]"/>
                    </group>
                </group>
                <group attrs="{'invisible': [('request_type', '!=', 'update_part_b')]}">
                    <group>
                        <field name="from_place" attrs="{'required': [('request_type', '=', 'update_part_b')]}"/>
                        <field name="from_state_id" attrs="{'required': [('request_type', '=', 'update_part_b')]}"/>
                        <field name="mode" attrs="{'required': [('request_type', '=', 'update_part_b')]}"/>
                        <field name="update_reason_code" attrs="{'required': [('request_type', '=', 'update_part_b')]}"/>
                        <field name="remarks" attrs="{'required': [('request_type', '=', 'update_part_b')]}"/>
                        <field name="vehicle_no" attrs="{'invisible': [('mode', '!=', '1')], 'required': [('request_type', '=', 'update_part_b'), ('mode', '=', '1')]}"/>
                        <field name="transporter_doc_no" attrs="{'invisible': [('mode', 'not in', ('2', '3', '4'))], 'required': [('request_type', '=', 'update_part_b'), ('mode', 'in', ('2', '3', '4'))]}"/>
                        <field name="transporter_doc_date" attrs="{'invisible': [('mode', 'not in', ('2', '3', '4'))], 'required': [('request_type', '=', 'update_part_b'), ('mode', 'in', ('2', '3', '4'))]}"/>
                    </group>
                </group>
                <group attrs="{'invisible': [('request_type', '!=', 'extend')]}">
                    <group>
                        <field name="extend_reason_code" attrs="{'required': [('request_type', '=', 'extend')]}"/>
                        <field name="remarks" attrs="{'required': [('request_type', '=', 'extend')]}"/>
                        <field name="from_place" attrs="{'required': [('request_type', '=', 'extend')]}"/>
                        <field name="from_state_id" attrs="{'required': [('request_type', '=', 'extend')]}"/>
                        <field name="from_pincode" attrs="{'required': [('request_type', '=', 'extend')]}"/>
                        <field name="remaining_distance" attrs="{'required': [('request_type', '=', 'extend')]}"/>
                        <field name="consignment_status" attrs="{'required': [('request_type', '=', 'extend')]}"/>
                    </group>
                    <group attrs="{'invisible': [('consignment_status', '!=', 'T')]}">
                        <field name="transit_type" attrs="{'required': [('consignment_status', '=', 'T')]}"/>
                        <field name="street" attrs="{'required': [('consignment_status', '=', 'T')]}"/>
                        <field name="street2" attrs="{'required': [('consignment_status', '=', 'T')]}"/>
                        <field name="street3" attrs="{'required': [('consignment_status', '=', 'T')]}"/>
                    </group>
                    <group attrs="{'invisible': [('consignment_status', '!=', 'M')]}">
                        <field name="mode" attrs="{'required': [('request_type', '=', 'extend'), ('consignment_status', '=', 'M')]}"/>
                        <field name="vehicle_no" attrs="{'required': [('request_type', '=', 'extend'), ('mode', '=', '1')], 'invisible': [('mode', '!=', '1')]}"/>
                        <field name="transporter_doc_no" attrs="{'required': [('request_type', '=', 'extend'), ('mode', 'in', ('2','3','4'))], 'invisible': [('mode', 'not in', ('2','3','4'))]}"/>
                        <field name="transporter_doc_date" attrs="{'required': [('request_type', '=', 'extend'), ('mode', 'in', ('2','3','4'))], 'invisible': [('mode', 'not in', ('2','3','4'))]}"/>
                    </group>
                </group>
                <footer>
                    <button type="object" name="action_process_ewaybill_request" string="Process" default_focus="1" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
