<templates xml:space="preserve">

    <t t-name="mail.RtcVideo" owl="1">
        <t t-if="rtcSession">
            <video class="o_RtcVideo"
                t-attf-class="{{ className }}"
                playsinline="true"
                autoplay="true"
                muted="true"
                t-on-loadedmetadata="_onVideoLoadedMetaData"
                t-ref="root"
                width="600" height="480"
                style="display:none"
            />
