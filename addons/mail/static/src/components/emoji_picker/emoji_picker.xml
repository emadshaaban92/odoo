<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="mail.EmojiPicker" owl="1">
        <div class="o_EmojiPicker px-1" t-attf-class="{{ className }}" t-ref="root">
            <EmojiCategoryBar emojiCategoryBar="props.record.emojiCategoryBar"/>
            <t t-if="props.record">
                <t t-foreach="props.record.emojiViews" t-as="emojiView" t-key="emojiView.localId">
                    <Emoji emojiView="emojiView"/>
                </t>
            </t>
        </div>
    </t>

</templates>
