<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="mail.MessageContextMenu" owl="1">
        <div class="o_MessageContextMenu d-flex align-items-center justify-content-center w-100 h-100 " t-attf-class="{{ className }}" t-ref="root">
            <div class="o_MessageContextMenu_container d-flex bg-100 ">
                <div class="text-center w-25 m-2 overflow-auto">
                    <t t-foreach="items" t-as="messageReactionGroupItem" t-key="messageReactionGroupItem.localId">
                        <MessageReactionGroupItem record="messageReactionGroupItem"/>
                    </t>
                </div>
                <div class="w-100 overflow-auto">
                    <PersonaListView record="personaListView"/>
                </div>
            </div>
        </div>
    </t>

</templates>