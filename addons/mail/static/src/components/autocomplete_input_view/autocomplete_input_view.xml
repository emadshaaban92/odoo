<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="mail.AutocompleteInputView" owl="1">
        <div class="o_AutocompleteInputView position-relative w-100" t-attf-class="{{ className }}">
            <input
                class="o_AutocompleteInputView_input form-control px-3"
                t-attf-class="{{ autocompleteInputView.customInputClass }}"
                t-att-placeholder="autocompleteInputView.placeholder"
                t-on-focusin="autocompleteInputView.onFocusin"
                t-on-input="autocompleteInputView.onInputSearch"
                t-on-keydown="autocompleteInputView.onKeydown"
                t-ref="root"
            />
            <t t-if='autocompleteInputView.autocompleteInputSuggestionListView'>
                <AutocompleteInputSuggestionListView record='autocompleteInputView.autocompleteInputSuggestionListView'>
            </t>
        </div>
    </t>

</templates>
