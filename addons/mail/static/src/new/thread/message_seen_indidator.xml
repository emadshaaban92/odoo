<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="mail.message_seen_indicator" owl="1">
        <span class="o_MessageSeenIndicatorView position-relative d-flex opacity-75-hover opacity-50" t-att-class="{ 'o-all-seen text-odoo': hasEveryoneSeen }" t-att-title="text">
            <t t-if="!isMessagePreviousToLastCurrentPartnerMessageSeenByEveryone">
                <i t-if="hasSomeoneFetched or hasSomeoneSeen" class="o_MessageSeenIndicatorView_icon o-first fa fa-check ps-1"/>
                <i t-if="hasSomeoneSeen" class="o_MessageSeenIndicatorView_icon o-second fa fa-check position-absolute"/>
            </t>
        </span>
    </t>
</templates>
