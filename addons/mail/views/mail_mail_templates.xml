<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="mail.mail_attachment_links" name="Embedded attachments for heavy mail">
        <hr style="background-color:rgb(204,204,204);border:medium none;clear:both;display:block;font-size:0px;min-height:1px;line-height:0; margin: 16px 0px 10px 0px;"/>
        <span style="display: inline-block; text-align: center; margin: 0px 8px 10px 0px;">Attachments:</span>
        <t t-foreach="attachments" t-as="attachment">
            <span style="display: inline-block; border-radius: 3px; text-align: center; padding: 8px 12px 11px; margin: 0px 8px 10px 0px; background:#875A7B">
                <a t-attf-href="{{attachment.get_base_url()}}/web/content/{{attachment.id}}?download=1&amp;access_token={{attachment.access_token}}"
                   style="font-size: 12px; color: #FFFFFF; text-decoration: none !important; font-weight: 400;">
                    <t t-out="attachment.name"/>
                </a>
            </span>
        </t>
    </template>
</odoo>
