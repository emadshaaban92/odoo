<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="partner_demo_company_xi" model="res.partner">
        <field name="name">NI Company</field>
        <field name="vat"></field>
        <field name="street">2 Airport Road</field>
        <field name="city">Belfast</field>
        <field name="country_id" ref="base.xi"/>
        <field name="state_id" ref="base.state_xi18"/>
        <field name="zip"></field>
        <field name="phone">+44 28 90 34 5678</field>
        <field name="email">info@company.niexample.com</field>
        <field name="website">www.niexample.com</field>
    </record>

    <record id="demo_company_xi" model="res.company">
        <field name="name">NI Company</field>
        <field name="partner_id" ref="partner_demo_company_xi"/>
    </record>

    <function model="res.company" name="_onchange_country_id">
        <value eval="[ref('l10n_xi.demo_company_xi')]"/>
    </function>

    <function model="res.users" name="write">
        <value eval="[ref('base.user_root'), ref('base.user_admin'), ref('base.user_demo')]"/>
        <value eval="{'company_ids': [(4, ref('l10n_xi.demo_company_xi'))]}"/>
    </function>

    <function model="account.chart.template" name="try_loading">
        <value eval="[ref('l10n_xi.l10n_xi_chart_template')]"/>
        <value model="res.company" eval="obj().env.ref('l10n_xi.demo_company_xi')"/>
    </function>
</odoo>
