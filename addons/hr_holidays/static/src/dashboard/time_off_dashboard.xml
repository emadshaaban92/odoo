<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <div t-name="hr_holidays.TimeOffDashboard" owl="1">
        <div class="row justify-content-end m-0 p-2 o_timeoff_allocation_date">
            View allocations from the date :
            <div style="max-width: 150px!important">
                <DatePicker
                    date="state.date"
                    minDate="state.date"
                    onDateTimeChanged.bind="loadDashboardData"/>
            </div>
        </div>
        <div class="o_timeoff_dashboard row m-0">
            <t t-foreach="state.holidays" t-as="holiday" t-key="holiday[3]">
                <TimeOffCard
                    name="holiday[0]"
                    data="holiday[1]"
                    requires_allocation="holiday[2] == 'yes'"
                    id="holiday[3]"
                    is_today="state.is_today"/>
            </t>
        </div>
    </div>
</templates>
