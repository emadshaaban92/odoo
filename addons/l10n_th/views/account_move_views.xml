<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form" model="ir.ui.view">
        <field name="name">account.move.form.inherit.l10n_th</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@id='header_left_group']//field[@name='partner_id']" position="after">
                <field name="l10n_th_vat" attrs="{'invisible': [('country_code', '!=', 'TH')]}" />
                <field name="l10n_th_company_info" attrs="{'invisible': [('country_code', '!=', 'TH')]}" />
                <field name="l10n_th_branch_number" attrs="{'invisible': ['|', ('country_code', '!=', 'TH'), ('l10n_th_company_info', '!=', 'branch')]}" />
            </xpath>
            <xpath expr="//page[@name='other_info']//field[@name='partner_bank_id']" position="after">
                <field name="l10n_th_custom_header" attrs="{'invisible': [('country_code', '!=', 'TH')]}" />
            </xpath>
        </field>
    </record>
</odoo>
