<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form view: -->
    <record id="knowledge_article_view_dashboard" model="ir.ui.view">
        <field name="name">knowledge.article.form.inherit</field>
        <field name="model">knowledge.article</field>
        <field name="inherit_id" ref="knowledge.knowledge_article_view_dashboard"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('o_knowledge_share_panel')]/*[1]" position="before">
                <div class="d-flex px-3">
                    <div class="o_knowledge_share_panel_icon align-self-center">
                        <i class="fa fa-globe align-self-center"/>
                    </div>
                    <div class="flex-grow-1 px-3">
                        <div class="lead">Share to web</div>
                        <div attrs="{'invisible': [('is_published', '=', False)]}">
                            Anyone with the link can view
                        </div>
                        <div attrs="{'invisible': [('is_published', '=', True)]}">
                            Publish and share link with anyone
                        </div>
                    </div>
                    <div class="align-self-center">
                        <field name="is_published" widget="boolean_toggle"/>
                    </div>
                </div>
                <div class="dropdown-divider"></div>
                <div class="px-3 pb-2" attrs="{'invisible': [('is_published', '=', False)]}">
                    <field name="share_link" widget="CopyClipboardChar" readonly="1"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
