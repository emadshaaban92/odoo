<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="ProductMainView" owl="1">
        <NavBar viewMenu="props.viewMenu"/>
            <!-- this padding-bottom is important in order for the Cart button not to -->
            <!-- appear over the last item -->
            <div class="pb-5">
                <div class="text-center m-4">
                    <img class="img-fluid" t-attf-src="/pos-self-order/get-images/{{ props.product.id }}"  alt="Product image"/>
                </div>
                <!-- Name and Price -->
                <div class="d-flex w-100 justify-content-around">
                    <!-- Product Name -->
                    <h3><t t-esc="props.product.name"/></h3>
                    <!-- Price -->
                    <h3 class="ml-auto text-secondary"><t t-esc="props.product.list_price + 'â‚¬'"/></h3>
                </div>
                <!-- Product Description -->
                <div class="p-3 text-center">

                    <t t-if="props.product.description_sale != false">
                        <t t-esc="props.product.description_sale"/>    
                    </t>
                </div>
                <!-- quantity select and add to cart button -->
                    <div class="m-5">
                        <IncrementCounter setValue="setQuantity" value="state.quantity"/>
                    </div>
                    <button t-on-click="() => props.addToCart(props.product.id, state.quantity)"
                                class="p-3 fixed-bottom btn btn-primary btn-lg btn-block w-100">Add to Cart</button>
            </div>
    </t>
</templates>