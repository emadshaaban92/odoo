<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="CartView" owl="1">
        <!-- this padding-bottom is important in order for Pay button not to -->
        <!-- appear over the last item -->
        <div class="pb-5">
            <NavBar viewMenu="props.viewMenu"/>
<!-- Looping through all the cart items  -->
            <t t-foreach="props.cartItems" t-as="cartItem" t-key="cartItem.id">
                <!-- create a reference to the product -->
                <t t-set="product" t-value="props.productList.find(x => x.id === cartItem.id)"/>
                <div 
                    class="mt-2 bg-white d-flex align-items-center shadow-sm  m-1">
                    <img class="w-25 img-fluid" t-attf-src="/pos-self-order/get-images/{{ product.id }}"  alt="Product image"/>
                    <div class="mt-4 mx-4 w-100 me-5">
                        <div class="d-flex justify-content-between w-100">
                            <p class="fw-bold"><t t-esc="product.name"/></p>
                            <svg xmlns="http://www.w3.org/2000/svg" 
                                width="16" height="16" fill="currentColor" 
                                class="bi bi-x text-primary" viewBox="0 0 16 16"
                                t-on-click="() => props.removeProductFromCart(product.id)"
                                >
                                <path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8 2.146 2.854Z"/>
                            </svg>
                        </div>
                        <div class="d-flex justify-content-between w-100">
                            <t t-esc="cartItem.quantity + ' x ' + product.list_price+ 'â‚¬'" />
                            <p class="fst-italic fw-bold text-right"><t t-esc="cartItem.quantity *  product.list_price+ 'â‚¬'" /></p>
                        </div>
                    </div>
                </div>
            </t>
<!-- Pay Button -->
            <button t-on-click="() => props.sendOrder()"
                    class="fixed-bottom text-white btn btn-primary btn-lg btn-block w-100">
                    <div class="d-flex align-items-center justify-content-between mx-2 ">
                    <p>
                        Order (<t t-esc="props.getTotalCartQuantity()"/>)
                    </p>
                    <p class="ml-auto">
                        <t t-esc="props.getTotalCartCost() + props.currencyType"/>
                    </p>
                    </div>
            </button>
        </div>
    </t>
</templates>

